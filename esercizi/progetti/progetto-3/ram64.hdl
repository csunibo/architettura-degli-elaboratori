/**
 * Memory of 64 registers, each 16 bit-wide. Out holds the value
 * stored at the memory location specified by address. If load==1, then 
 * the in value is loaded into the memory location specified by address 
 * (the loaded value will be emitted to out from the next time step onward).
 */

CHIP RAM64 {
    IN in[16], load, address[6];
    OUT out[16];

    PARTS:
    DMux8Way16(in=in, sel=address[0..2], a=inA, b=inB, c=inC, d=inD,
                                         e=inE, f=inF, g=inG, h=inH);
    DMux8Way(in=load, sel=address[0..2], a=loadA, b=loadB, c=loadC, d=loadD,
                                         e=loadE, f=loadF, g=loadG, h=loadH);

    RAM8(in=inA, load=loadA, address=address[3..5], out=outA);
    RAM8(in=inB, load=loadB, address=address[3..5], out=outB);
    RAM8(in=inC, load=loadC, address=address[3..5], out=outC);
    RAM8(in=inD, load=loadD, address=address[3..5], out=outD);
    RAM8(in=inE, load=loadE, address=address[3..5], out=outE);
    RAM8(in=inF, load=loadF, address=address[3..5], out=outF);
    RAM8(in=inG, load=loadG, address=address[3..5], out=outG);
    RAM8(in=inH, load=loadH, address=address[3..5], out=outH);

    Mux8Way16(a=outA, b=outB, c=outC, d=outD,
              e=outE, f=outF, g=outG, h=outH, sel=address[0..2], out=out);
}